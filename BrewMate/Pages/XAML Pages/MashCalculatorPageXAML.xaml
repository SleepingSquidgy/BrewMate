<?xml version="1.0" encoding="UTF-8"?>
<BrownGradientPage xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	xmlns:local="clr-namespace:BrewMate;assembly=BrewMate"
	x:Class="BrewMate.MashCalculatorPageXAML">
	<ScrollView BackgroundColor="Transparent">
		<StackLayout BackgroundColor="Transparent" Padding="5">
			<StackLayout VerticalOptions="FillAndExpand">
				<StackLayout.Padding>
					<OnPlatform x:TypeArguments="Thickness" iOS="0,-20,0,0" Android="0,0,0,0" WinPhone="0,0,0,0" />
				</StackLayout.Padding>
				<TableView Intent = "Form"
						BackgroundColor = "Transparent"
						VerticalOptions = "FillAndExpand"
						RowHeight = "30"
						x:Name="grainsAddedTableView">
					<TableView.Root>
						<TableSection x:Name="headerTableSection">
							<local:MashCalculatorHeader/>
						</TableSection>
					</TableView.Root>
				</TableView>
			</StackLayout>

			<StackLayout Orientation = "Horizontal"
				HorizontalOptions = "Center">
				<local:GrainThemedButton Text="Add Grain" 
					Clicked="AddGrain">
					<local:GrainThemedButton.WidthRequest>
						<OnPlatform x:TypeArguments="x:Double" iOS="100" Android="150" WinPhone="150" />	
					</local:GrainThemedButton.WidthRequest>
				</local:GrainThemedButton>
				<local:GrainThemedButton Text="Clear" 
					Clicked="ClearGrains">
					<local:GrainThemedButton.WidthRequest>
						<OnPlatform x:TypeArguments="x:Double" iOS="100" Android="150" WinPhone="150" />	
					</local:GrainThemedButton.WidthRequest>
				</local:GrainThemedButton>
			</StackLayout>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="120"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<local:WhiteTextColorLabel Text="Mash Volume"
					Grid.Row="1" Grid.Column="0"/>
				<local:GrainThemedNumberEntry Text="0"
					TextChanged="VolumeEntryChanged"
					x:Name="mashVolumeEntry"
					Grid.Row="1" Grid.Column="1"/>
				<local:BrownStepper Value="0"
					Minimum="0"
					Maximum="1000"	
					Increment="1"
					ValueChanged="VolumeStepperChanged"
					x:Name="mashVolumeStepper"
					Grid.Row="1" Grid.Column="2"/>
			</Grid>
			<StackLayout>
				<local:GrainThemedButton Text="Calculate SRM" 
					Clicked="CalculateSRM">
					<local:GrainThemedButton.WidthRequest>
						<OnPlatform x:TypeArguments="x:Double" iOS="200" Android="250" WinPhone="250" />	
					</local:GrainThemedButton.WidthRequest>
				</local:GrainThemedButton>
			</StackLayout>
		</StackLayout>
	</ScrollView>
</BrownGradientPage>
